<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <!-- Organizer Page Heading -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Organizer Page"
        android:textSize="32sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/facility_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Facility Name"
        android:textSize="24sp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp" />

    <!-- Edit Facility Button -->
    <Button
        android:id="@+id/edit_facility_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Facility"
        android:layout_marginTop="20dp"
        android:backgroundTint="#b391f8" />

    <Button
        android:id="@+id/create_event_button"
        android:layout_width="365dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="Create Event" />
    <Button
        android:id="@+id/view_events_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="#b391f8"
        android:text="View All Events" />

    <!-- Bottom Navigation Icons -->

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="362dp"
        android:layout_height="193dp"
        android:layout_marginTop="150dp"
        android:layout_weight="1"
        > <!-- Adjust this margin to move it further down -->


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:padding="10dp">

        <ImageView
            android:id="@+id/homeIcon"
            android:layout_width="18dp"
            android:layout_height="93dp"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            app:tint="#b391f8" />

        <ImageView
            android:id="@+id/addIcon"
            android:layout_width="40dp"
            android:layout_height="96dp"
            android:layout_weight="1"
            android:src="@drawable/ic_add"
            app:tint="@color/black" />

        <ImageView
            android:id="@+id/groupIcon"
            android:layout_width="24dp"
            android:layout_height="87dp"
            android:layout_weight="1"
            android:src="@drawable/ic_group"
            app:tint="#b391f8" />
    </LinearLayout>

</LinearLayout>
